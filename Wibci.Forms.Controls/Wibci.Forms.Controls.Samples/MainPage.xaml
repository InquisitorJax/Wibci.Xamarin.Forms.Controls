             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Wibci.Forms.Controls.Samples">

    <StackLayout Padding="12">

        <Button Command="{Binding ShowGridViewPageCommand}" Text="Grid View" />
        <Button Command="{Binding ShowSwitchViewPageCommand}" Text="Switch View" />
        <Button IsEnabled="False" Text="String Entry + Wrap Layout View" />
        <Button IsEnabled="False" Text="List View" />
        <Button IsEnabled="False" Text="Toolbar Item" />
        <Button IsEnabled="False" Text="Editor" />
        <Button IsEnabled="False" Text="Add String Entry" />
        <Button IsEnabled="False" Text="Wibci Entry" />
    </StackLayout>
</ContentPage>